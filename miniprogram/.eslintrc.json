{
  "env": {
    "browser": false,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "globals": {
    "wx": "readonly",
    "getApp": "readonly",
    "getCurrentPages": "readonly",
    "Page": "readonly",
    "Component": "readonly",
    "App": "readonly",
    "Behavior": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "indent": ["error", 2],
    "comma-dangle": ["error", "never"],
    "no-multiple-empty-lines": ["error", { "max": 2 }],
    "eol-last": ["error", "always"]
  }
}
