/* pages/image/image.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f6ff 0%, #f7f8fa 100%);
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #00234b;
  text-align: center;
  margin-bottom: 40rpx;
  letter-spacing: 1rpx;
}

.card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 82, 217, 0.06);
  border: 1rpx solid rgba(0, 82, 217, 0.05);
}

.subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: #00234b;
  margin-bottom: 24rpx;
}

.format-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.format-item {
  background: #ffffff;
  border: 2rpx solid #e7e7e7;
  border-radius: 16rpx;
  padding: 28rpx 16rpx;
  text-align: center;
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.format-item.selected {
  background: #e6f0ff;
  border-color: #0052d9;
  color: #0052d9;
  font-weight: 600;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.15);
}

.format-text {
  font-size: 26rpx;
  font-weight: 500;
}

.btn-primary {
  background: #0052d9;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-shadow: 0 4rpx 12rpx rgba(0, 82, 217, 0.2);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 82, 217, 0.2);
}

.btn-success {
  background: #2ba471;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
  box-shadow: 0 4rpx 12rpx rgba(43, 164, 113, 0.2);
  transition: all 0.3s ease;
}

.btn-success:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(43, 164, 113, 0.2);
}

.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.file-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
}

.file-info {
  flex: 1;
  overflow: hidden;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-size {
  font-size: 24rpx;
  color: #999;
  display: inline-block;
  margin-right: 16rpx;
}

.file-format {
  font-size: 20rpx;
  color: #0052d9;
  background: rgba(0, 82, 217, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  display: inline-block;
}

.file-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 12rpx;
}

.status-badge {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  background: #eee;
  color: #666;
}

.status-processing {
  background: #e6f0ff;
  color: #0052d9;
}

.status-success {
  background: #e3f9e9;
  color: #2ba471;
}

.status-error {
  background: #fff0f0;
  color: #d93025;
}

.action-row {
  display: flex;
  gap: 12rpx;
}

.action-row button {
  margin: 0;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  line-height: 1.5;
  background: white;
  border: 1rpx solid #ddd;
}

.progress-container {
  margin-top: 16rpx;
}

.progress-bar {
  height: 12rpx;
  background: #eee;
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 12rpx;
}

.progress-fill {
  height: 100%;
  background: #0052d9;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.no-targets {
  grid-column: 1 / -1;
  text-align: center;
  padding: 40rpx 0;
}

.muted {
  color: #999;
  font-size: 28rpx;
}
