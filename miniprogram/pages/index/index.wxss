/* pages/index/index.wxss */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f6ff 0%, #f7f8fa 100%);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 20rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #00234b;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #5e6c84;
}

.category-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 60rpx;
}

.category-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 82, 217, 0.06);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(0, 82, 217, 0.05);
}

.category-card:active {
  transform: scale(0.98);
  background: #e6f0ff;
  border-color: #0052d9;
}

.category-card:last-child {
  grid-column: 1 / -1;
  width: calc(50% - 12rpx);
  justify-self: center;
}

.category-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
  display: block;
}

.category-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #00234b;
  margin-bottom: 12rpx;
  display: block;
}

.category-desc {
  font-size: 24rpx;
  color: #8898aa;
  line-height: 1.4;
}
